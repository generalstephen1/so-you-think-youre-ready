    <nav class="side-bar__nav">
        <span class="side-bar__title">{{title}}</span>

        {{#each points as |point index|}}
        {{#if point.content}}
            {{#if point.url}}
            <a href={{point.url}} target="_blank" class="mdl-button mdl-js-button mdl-button--primary">
                {{point.shortTitle}} ðŸ”—
            </a>
            {{else}}
            {{link-to
                point.shortTitle
                (concat point.cat '.item')
