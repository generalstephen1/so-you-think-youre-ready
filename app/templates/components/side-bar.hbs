<div class="mdl-layout__drawer is-visible">
    <nav class="side-bar__nav">
        <span class="side-bar__title">{{title}}</span>
        {{progress-bar
            completedPoints=completedPoints
            totalPoints=totalPoints
        }}
        {{#each points as |point index|}}
            {{#if point.url}}
                <a href={{point.url}} target="_blank" class={{concat "mdl-button mdl-js-button mdl-button--primary side-bar__item side-bar__item--level-" point.level}}>
                    {{point.shortTitle}} ðŸ”—
                    {{#if point.approved}}
                        <span class="side-bar__approval">âœ“</span>
                    {{/if}}
                </a>
            {{else if point.content}}
                {{#link-to
                    (concat point.cat '.item')
                    point.slug
                    class=(concat "mdl-button mdl-js-button mdl-button--primary side-bar__item side-bar__item--level-" point.level)}}
                    {{#if point.approved}}
                        <span class="side-bar__approval">âœ“</span>
                    {{/if}}
                    {{point.shortTitle}}
                {{/link-to}}
            {{else}}
                <span class="mdl-button mdl-js-button mdl-button--disabled">
                    {{point.shortTitle}}
                </span>
            {{/if}}
        {{/each}}
    </nav>
</div>