<div class="mdl-layout__drawer is-visible">
    <nav class="side-bar__nav">
        <span class="side-bar__title">{{title}}</span>

        {{#each points as |point index|}}
            {{#if point.url}}
                <a href={{point.url}} target="_blank" class="mdl-button mdl-js-button mdl-button--primary">
                    {{point.shortTitle}} ðŸ”—
                </a>
            {{else if point.content}}
                {{link-to
                    point.shortTitle
                    (concat point.cat '.item')
                    point.slug
                    class="mdl-button mdl-js-button mdl-button--primary"}}
            {{else}}
                <span class="mdl-button mdl-js-button mdl-button--disabled">
                    {{point.shortTitle}}
                </span>
            {{/if}}
        {{/each}}
    </nav>
</div>